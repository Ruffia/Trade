<Viewbox xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" Stretch="Uniform">
	<Canvas Width="32" Height="32">

		<Border Width="32" Height="32">
			<Border.Background>
				<LinearGradientBrush StartPoint="0, 0" EndPoint="0,1">
					<GradientStop Color="#E4E4E4" Offset="0"/>
					<GradientStop Color="#C3C3C3" Offset="1"/>
				</LinearGradientBrush>
			</Border.Background>
		</Border>

		<Canvas Canvas.Top="8" Width="32" Height="24">
			<Border Canvas.Top="-8" Width="32" Height="32" BorderBrush="#4170CA" BorderThickness="1"/>
		</Canvas>

		<Canvas Canvas.Left="4" Canvas.Top="0" Width="24" Height="28">
			<Rectangle Canvas.Left="0" Canvas.Top="0" Width="24" Height="28" Fill="#52419C"/>
			<Rectangle Canvas.Left="1" Canvas.Top="1" Width="22" Height="26" Fill="White"/>

			<Rectangle Canvas.Left="1" Canvas.Top="14" Width="22" Height="13">
				<Rectangle.Fill>
					<LinearGradientBrush StartPoint="0, 0" EndPoint="1,0">
						<GradientStop Color="#B4C9E1" Offset="0"/>
						<GradientStop Color="#D7E4F3" Offset="1"/>
					</LinearGradientBrush>
				</Rectangle.Fill>
			</Rectangle>

			<Rectangle Canvas.Left="1" Canvas.Top="0" Width="22" Height="3">
				<Rectangle.Fill>
					<LinearGradientBrush StartPoint="0, 0" EndPoint="1,0">
						<GradientStop Color="#7887A2" Offset="0"/>
						<GradientStop Color="#3C4A65" Offset="1"/>
					</LinearGradientBrush>
				</Rectangle.Fill>
			</Rectangle>

			<Rectangle Canvas.Left="1" Canvas.Top="1" Width="22" Height="2">
				<Rectangle.Fill>
					<LinearGradientBrush StartPoint="0, 0" EndPoint="1,0">
						<GradientStop Color="#759CE5" Offset="0"/>
						<GradientStop Color="#4170CA" Offset="1"/>
					</LinearGradientBrush>
				</Rectangle.Fill>
			</Rectangle>

			<Line Canvas.Left="0" Canvas.Top="14" X2="24" Stroke="#52419C" StrokeDashArray="1"/>

		</Canvas>

		<Canvas Name="Arrow" Canvas.Left="6" Canvas.Top="3" Width="20" Height="13">
			<Path Data="M  6,4  14,4  10,8">
				<Path.Fill>
					<LinearGradientBrush StartPoint="0, 0" EndPoint="0,1">
						<GradientStop Offset="0" Color="#4662BC"/>
						<GradientStop Offset="1" Color="#52419C"/>
					</LinearGradientBrush>
				</Path.Fill>
			</Path>
		</Canvas>

	</Canvas>
</Viewbox>
